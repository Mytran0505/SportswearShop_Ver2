@using System.Globalization;
@{
    ViewData["Title"] = ViewBag.NameOfCategory.GetType().GetProperty("Name").GetValue(ViewBag.NameOfCategory, null);
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
    CultureInfo cul = CultureInfo.GetCultureInfo("vi-VN");
}
@using X.PagedList.Mvc.Core;
@using X.PagedList;
<!-- Start Product Area -->
<div class="product-area section p-t-30 p-b-120">
    <div class="container">
        <div class="row p-b-10">
            <div class="col-12">
                <div class="section-title">
                    <h2 style="text-transform:none;">@ViewBag.NameOfCategory.GetType().GetProperty("Name").GetValue(ViewBag.NameOfCategory, null)</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="product-info">
                    <div class="nav-main">
                        <!-- Tab Nav -->
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            @foreach (var item0 in ViewBag.MenuOfCategory)
                            {
                                <li class="nav-item"><a class="nav-link active+@item0.GetType().GetProperty("MenuId").GetValue(item0, null)" data-toggle="tab" href="#@item0.GetType().GetProperty("MenuName").GetValue(item0, null)" role="tab">@item0.GetType().GetProperty("MenuName").GetValue(item0, null)</a></li>
                            @*<li class="nav-item"><a class="nav-link" data-toggle="tab" href="#women" role="tab">PC</a></li>
                            <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#kids" role="tab">Phụ kiện</a></li>*@
                            }
                        </ul>
                        <!--/ End Tab Nav -->
                    </div>
                    <div class="tab-content" id="myTabContent">
                        <!-- Start Single Tab -->
                         @foreach (var item1 in ViewBag.MenuOfCategory)
                                {

                            <div class="tab-pane fade show active+@item1.GetType().GetProperty("MenuId").GetValue(item1, null)" id="#@item1.GetType().GetProperty("MenuName").GetValue(item1, null)" role="tabpanel">
                            <div class="tab-single">
                                <div class="row">
                                        @foreach (var item in @ViewBag.ProductForHomePage)
                                        {
                                            @if (item.GetType().GetProperty("Menu_id").GetValue(item, null) == @item1.GetType().GetProperty("MenuId").GetValue(item1, null))
                                            {
                                                <div class="col-xl-3 col-lg-4 col-md-4 col-12">
                                                    <div class="single-product">
                                                        <div class="product-img hov-img0 b-r-15">
                                                            <a href="/ProductDetail/product_detail?productId=@item.GetType().GetProperty("Id").GetValue(item, null)">
                                                                <img class="default-img" src="@item.GetType().GetProperty("Image").GetValue(item, null)" alt="#">
                                                                <img class="hover-img" src="@item.GetType().GetProperty("Image").GetValue(item, null)" alt="#">
                                                                @*@{
                                                            double so_ngay_da_moban = (DateTime.Now - item.GetType().GetProperty("StartsAt").GetValue(item, null)).TotalDays;
                                                        }*@
                                                                @if (item.GetType().GetProperty("Quantity").GetValue(item, null) < 1)
                                                                {
                                                                    <span class="out-of-stock" style="background-color:#FF8C00;">Hết hàng</span>
                                                                }
                                                                @*@if (so_ngay_da_moban < 14)
                                                        {
                                                            <span class="new" style="right: 180px;">New</span>
                                                        }*@
                                                    </a>
                                                    <div class="button-head">
                                                        <div class="product-action">
                                                            @*<a data-toggle="modal" data-target="#exampleModal" title="Quick View" href="#"><i class=" ti-eye"></i><span>Lượt xem: @item.GetType().GetProperty("View").GetValue(item, null)</span></a>*@
                                                            <a title="Wishlist" href="javascript:void(0)"><i class=" ti-heart "></i><span>Yêu thích</span></a>
                                                            <input type="text" class="ProductId" value="@item.GetType().GetProperty("Id").GetValue(item, null)" hidden>
                                                        </div>
                                                        <div class="product-action-2">
                                                            <a title="Add to cart" class="add-to-cart-a-tag" href="javascript:void(0)">Thêm vào giỏ hàng</a>
                                                            <input type="text" value="@item.GetType().GetProperty("Id").GetValue(item, null)" hidden>
                                                            <input type="hidden" class="Quantity" value="@item.GetType().GetProperty("Quantity").GetValue(item, null)">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="product-content">
                                                    <h3><a style="text-decoration: none;" href="/ProductDetail/product_detail?productId=@item.GetType().GetProperty("Id").GetValue(item, null)">@item.GetType().GetProperty("Name").GetValue(item, null)</a></h3>
                                                    <div class="product-price">
                                                        <span style="color:black; font-size:17px"><b>@item.GetType().GetProperty("Price_sale").GetValue(item, null).ToString("#,###", cul.NumberFormat) ₫</b></span>
                                                        @if (item.GetType().GetProperty("Discount").GetValue(item, null) > 0)
                                                        {
                                                            double dc = @item.GetType().GetProperty("Price").GetValue(item, null) + (@item.GetType().GetProperty("Price").GetValue(item, null) * (@item.GetType().GetProperty("Discount").GetValue(item, null)) / 100);
                                                            <br>
                                                            <span class="old">@dc.ToString("#,###", cul.NumberFormat) ₫</span>
                                                            <span class="o-giam-gia" style="font-size:10px">-@item.GetType().GetProperty("Discount").GetValue(item, null)% </span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        }
                                        }
                                </div>
                            </div>
                        </div>
                            
                        }
                        <!--/ End Single Tab -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Product Area -->


